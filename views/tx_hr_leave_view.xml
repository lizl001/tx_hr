<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record model="ir.ui.view" id="view_leave_search">
        <field name="name">tx_hr_leave.search</field>
        <field name="model">tx.hr.leave</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="date"/>
                <field name="department_id"/>
                <field name="job_id"/>
                <field name="begin_time"/>
                <field name="over_time"/>
                <searchpanel>
                    <field name="leave_type"/>
                    <!--                    <field name="leave_state"/>-->
                </searchpanel>
            </search>

        </field>
    </record>


    <record id="view_leave_form" model="ir.ui.view">
        <field name="name">hr_leave.form</field>
        <field name="model">tx.hr.leave</field>
        <field name="arch" type="xml">
            <form string="请假申请">
                <header>
                    <button invisible="1"/>
                    <field name="state" invisible="1"/>
                    <field name="leave_state" widget="statusbar"
                           statusbar_visible="draft,pending,approved,rejected"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="department_id" invisible="1"/>
                            <field name="job_id" invisible="1"/>
                            <field name="begin_time"
                                   widget="daterange"
                                   options="{'related_end_date': 'over_time', 'picker_options': {'timePickerIncrement': 30}}"
                                   id="begin_time"/>
                            <field name="over_time"
                                   widget="daterange"
                                   options="{'related_start_date': 'begin_time', 'picker_options': {'timePickerIncrement': 30}}"
                                   id="over_time"/>
                            <field name="attachment_ids" widget="many2many_binary"/>
                        </group>
                        <group>
                            <field name="leave_explain"/>
                            <field string="假类" name="leave_type"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="请假人员">
                            <field name="leave_person_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="department_id"/>
                                    <field name="job_id"/>
                                    <field name="company_id" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_leave_tree" model="ir.ui.view">
        <field name="name">hr_leave.form</field>
        <field name="model">tx.hr.leave</field>
        <field name="arch" type="xml">
            <tree>
                <field name="date"/>
                <field name="name"/>
                <field name="job_id"/>
                <field name="department_id"/>
                <field name="begin_time"/>
                <field name="over_time"/>
                <field name="leave_type"/>
                <field name="attachment_ids"/>
                <field name="leave_explain"/>
                <field name="leave_state" widget="label_selection"/>
                <!--                <button name="action_confirm" icon="fa-thumbs-up" states="draft" string="确认" type="object"-->
                <!--                        modifiers="{'invisible':[('state','not in',['draft'])]}"/>-->

            </tree>
        </field>
    </record>

    <record id="leave_act_window" model="ir.actions.act_window">
        <!--id决定了继承时，需要继承的对象-->
        <field name="name">请假申请</field>
        <!--一级菜单显示名称-->
        <field name="res_model">tx.hr.leave</field>
        <!--绑定表名-->
        <field name="view_mode">tree,form,search</field>
        <!--绑定视图-->
        <!--        <field name="view_id" ref="view_leave_tree"/>-->
    </record>
</odoo>

