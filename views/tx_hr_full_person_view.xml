<odoo>
    <data>
        <record id="tx_hr_apply_full_member_form" model="ir.ui.view">
            <field name="name">tx_hr_apply_full_member_form</field>
            <field name="model">tx.hr.apply.full.member</field>
            <field name="arch" type="xml">
                <form string="转正申请">
                    <header>
                        <button invisible="1"/>
                        <field name="state" invisible="1"/>
                        <field name="full_state" widget="statusbar"
                               statusbar_visible="draft,pending,approved,rejected"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" options="{'no_open': True}"/>
                                <field name="department_id"/>
                                <field name="job_id"/>
                                <field name="pay_increase_category"/>
                            </group>
                            <group>
                                <field name="effective_time"/>
                                <field name="entry_time"/>
                                <field name="attachment_ids" widget="many2many_binary"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="转正人员">
                                <header>
                                    <button name="button_creat_full_detail" type="object" string="批量添加员工"/>
                                </header>
                                <field name="full_member">
                                    <tree editable="top">
                                        <field name="employee_id" options="{'no_open': True}"/>
                                        <field name="department_id"/>
                                        <field name="job_id"/>
                                        <field name="currentSalary"/>
                                        <field name="effectiveSalary"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="tx_hr_apply_full_member_tree" model="ir.ui.view">
            <field name="name">tx_hr_card_replacement_application_tree</field>
            <field name="model">tx.hr.apply.full.member</field>
            <field name="arch" type="xml">
                <tree string="转正申请">
                    <field name="name"/>
                    <field name="department_id"/>
                    <field name="job_id"/>
                </tree>
            </field>
        </record>

        <record id="view_tx_hr_apply_full_member" model="ir.actions.act_window">
            <field name="name">转正申请</field>
            <field name="res_model">tx.hr.apply.full.member</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>