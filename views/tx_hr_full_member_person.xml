<odoo>
    <data>
        <record id="full_member_person_tree" model="ir.ui.view">
            <field name="name">tx_hr_card_replacement_application_person_tree</field>
            <field name="model">tx.hr.apply.full.member.person</field>
            <field name="arch" type="xml">
                <tree string="员工明细" editable="top" create="0" export_xlsx="0">
                    <header>
                        <button type="object" string="保存" name="save_data"/>
                    </header>
                    <field name="name" options="{'no_open': True}"/>
                    <field name="department_id" options="{'no_open': True}"/>
                    <field name="job_id" options="{'no_open': True}"/>
                </tree>
            </field>
        </record>

        <record id="view_tx_hr_full_member" model="ir.actions.act_window">
            <field name="name">员工明细</field>
            <field name="res_model">tx.hr.apply.full.member.person</field>
            <field name="view_mode">tree</field>
        </record>
    </data>
</odoo>