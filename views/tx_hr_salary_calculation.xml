<odoo>
    <data>
        <record id="view_calculation_tree" model="ir.ui.view">
            <field name="name">tx.hr.salary.calculation.tree</field>
            <field name="model">tx.hr.salary.calculation</field>
            <field name="arch" type="xml">
                <tree create="0" delete="0">
                    <header>
                        <button type="object" string="更新数据" name="refresh_data"/>
                    </header>
                    <field name="month"/>
                    <field name="name" options="{'no_open': True}"/>
                    <field name="department_id" options="{'no_open': True}"/>
                    <field name="job_id" options="{'no_open': True}"/>
                    <field name="days_of_attendance_due" optional='hide' sum="总计："/>
                    <field name="attendance" optional='hide' sum="总计："/>
                    <field name="performance_coefficient" optional='hide' sum="总计："/>
                    <field name="normal_overtime_hours" optional='hide' sum="总计："/>
                    <field name="holiday_overtime_hours" optional='hide ' sum="总计："/>
                    <field name="wage" optional='show' sum="总计："/>
                    <field name="post_wage" optional='show' sum="总计："/>
                    <field name="job_subsidy" optional='hide' sum="总计："/>
                    <field name="merit_pay" optional='hide' sum="总计："/>
                    <field name="housing_subsidy" optional='show' sum="总计："/>
                    <field name="senior_allowance" optional='hide' sum="总计："/>
                    <field name="seniority_pay" optional='show' sum="总计："/>
                    <field name="attendance_bonus" optional='hide' sum="总计："/>
                    <field name="regular_overtime_pay" optional='hide' sum="总计："/>
                    <field name="holiday_overtime_pay" optional='hide' sum="总计："/>
                    <field name="overtime_pay" optional='hide' sum="总计："/>
                    <field name="other_subsidies" optional='hide'/>
                    <field name="piece_rate" optional='hide' sum="总计："/>
                    <field name="total_wage_bill" sum="总计："/>
                    <field name="deduction" sum="总计："/>
                    <field name="wages_payable" sum="总计："/>
                    <field name="social_security" sum="总计："/>
                    <field name="individual_income_tax" sum="总计："/>
                    <field name="net_pay" sum="总计："/>
                </tree>
            </field>
        </record>

        <record id="view_calculation_form" model="ir.ui.view">
            <field name="name">tx.hr.salary.calculation.form</field>
            <field name="model">tx.hr.salary.calculation</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="month"/>
                                <field name="name"/>
                                <field name="department_id"/>
                                <field name="job_id"/>
                                <field name="days_of_attendance_due"/>
                                <field name="attendance"/>
                                <field name="performance_coefficient"/>
                                <field name="normal_overtime_hours"/>
                                <field name="holiday_overtime_hours"/>
                                <field name="wage"/>
                                <field name="post_wage"/>
                                <field name="job_subsidy"/>
                                <field name="merit_pay"/>
                                <field name="housing_subsidy"/>
                                <field name="senior_allowance"/>
                                <field name="seniority_pay"/>
                            </group>
                            <group>
                                <field name="attendance_bonus"/>
                                <field name="regular_overtime_pay"/>
                                <field name="holiday_overtime_pay"/>
                                <field name="overtime_pay"/>
                                <field name="other_subsidies"/>
                                <field name="piece_rate"/>
                                <field name="total_wage_bill"/>
                                <field name="deduction"/>
                                <field name="wages_payable"/>
                                <field name="social_security"/>
                                <field name="individual_income_tax"/>
                                <field name="net_pay"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_salary_calculation" model="ir.actions.act_window">
            <field name="name">工资册</field>
            <field name="res_model">tx.hr.salary.calculation</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>