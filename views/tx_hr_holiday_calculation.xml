        <record id="view_holiday_calculation_calendar" model="ir.ui.view">
            <field name="name">tx.hr.holiday.calculation.calendar</field>
            <field name="model">tx.hr.holiday.calculation</field>
            <field name="arch" type="xml">
                <calendar event_open_popup="true" quick_add="False" mode="year" color="holiday_id" date_start="date"
                          hide_time="false">
                    <field name="holiday_id" filters="1"/>
                </calendar>
            </field>
        </record>

        <record id="view_holiday_calculation_form" model="ir.ui.view">
            <field name="name">tx.hr.holiday.calculation.form</field>
            <field name="model">tx.hr.holiday.calculation</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="date"/>
                            <field name="holiday_id"/>
                            <field name="remark"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="view_holiday_calculation_search" model="ir.ui.view">
            <field name="name">tx.hr.holiday.calculation.search</field>
            <field name="model">tx.hr.holiday.calculation</field>
            <field name="arch" type="xml">
                <search>
                    <searchpanel>
                        <field name="year"/>
                        <field name="month"/>
                    </searchpanel>
                </search>
            </field>
        </record>

        <record id="view_holiday_calculation" model="ir.actions.act_window">
            <field name="name">节假日</field>
            <field name="res_model">tx.hr.holiday.calculation</field>
            <field name="view_mode">calendar,form</field>
        </record>
    </data>
