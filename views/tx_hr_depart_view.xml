<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_tx_hr_depart_tree" model="ir.ui.view">
        <field name="name">tx.hr.depart.tree</field>
        <field name="model">tx.hr.depart</field>
        <field name="arch" type="xml">
            <tree>
                <field name="pin"/>
                <field name="employee_id"/>
                <field name="department_id"/>
                <field name="job_id"/>
                <!--                <field name="date_hired"/>-->
                <field name="application_date"/>
                <field name="depart_state" widget="label_selection"/>
            </tree>
        </field>
    </record>

    <record id="view_tx_hr_depart_form" model="ir.ui.view">
        <field name="name">tx.hr.depart.form</field>
        <field name="model">tx.hr.depart</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button invisible="1"/>
                    <field name="state" invisible="1"/>
                    <field name="depart_state" widget="statusbar"
                           statusbar_visible="draft,pending,approved,rejected"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="pin"/>
                            <field name="employee_id"/>
                            <field name="department_id"/>
                            <field name="resignation_type"/>
                        </group>
                        <group>
                            <field name="job_id"/>
                            <!--                            <field name="date_hired"/>-->
                            <field name="application_date"/>
                            <field name="pre_resignation_date"/>
                        </group>
                    </group>
                    <group>
                        <field name="reason"/>
                        <field name="attachment_ids" widget="many2many_binary"/>
                    </group>
                    <notebook>
                        <page string="人员">
                            <field name="employee_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="department_id"/>
                                    <field name="job_id"/>
                                    <field name="first_contract_date" string="入职时间"/>
                                </tree>
                            </field>
                        </page>
                        <span>员工申明:即日本人自愿辞职并与公司交接所有工作事务，无任何异议。</span>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_tx_hr_depart_search" model="ir.ui.view">
        <field name="name">tx.hr.depart.search</field>
        <field name="model">tx.hr.depart</field>
        <field name="arch" type="xml">
            <search>
                <field name="employee_id"/>
                <field name="department_id"/>
                <field name="resignation_type"/>
            </search>
        </field>
    </record>

    <record id="action_tx_hr_depart" model="ir.actions.act_window">
        <field name="name">员工辞职申请</field>
        <field name="res_model">tx.hr.depart</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>

