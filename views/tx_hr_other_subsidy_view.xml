<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_subsidies_search" model="ir.ui.view">
        <field name="name">tx_hr_other_subsidies.search</field>
        <field name="model">tx.hr.other.subsidies</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="date"/>
                <field name="department_id"/>
                <field name="job_id"/>
                <field name="name"/>
                <field name="type_deduction"/>
                <searchpanel>
                    <field name="year"/>
                    <field name="month"/>
<!--                    <field name="other_subsidies_state"/>-->
                </searchpanel>
            </search>
        </field>
    </record>
    <record id="view_subsidies_form" model="ir.ui.view">
        <field name="name">tx_hr_other_subsidies.form</field>
        <field name="model">tx.hr.other.subsidies</field>
        <field name="arch" type="xml">
            <form string="Example Model">
                <header>
                    <button invisible="1"/>
                    <field name="state" invisible="1"/>
                    <field name="other_subsidies_state" widget="statusbar"
                           statusbar_visible="draft,pending,approved,rejected"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" options="{'no_open': True}"/>
                        </group>
                        <group></group>
                        <group>
                            <field name="year"/>
                            <field name="department_id" options="{'no_open': True}"/>
                            <field name="job_id" options="{'no_open': True}"/>
                            <field name="attachment_ids" widget="many2many_binary"/>
                            <!--                            <field name="amount_subsidy"/>-->
                        </group>
                        <group>
                            <field name="month"/>
                            <field name="type_deduction"/>
                            <field name="deduction_statement"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="其他补助明细">
                            <header>
                                <button name="button_creat_coefficient_detail" type="object" string="批量添加员工"/>
                            </header>
                            <field name="other_subsidies_detail">
                                <tree editable="top">
                                    <field name="employee_id" options="{'no_create': True}"/>
                                    <field name="department_id" options="{'no_open': True}"/>
                                    <field name="job_id" options="{'no_open': True}"/>
                                    <field name="amount_subsidy"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_subsidies_tree" model="ir.ui.view">
        <field name="name">tx_hr_other_subsidies.tree</field>
        <field name="model">tx.hr.other.subsidies</field>
        <field name="arch" type="xml">
            <tree>
                <field name="date"/>
                <field name="name"/>
                <field name="department_id"/>
                <field name="job_id"/>
                <field name="type_deduction"/>
                <!--                <field name="amount_subsidy"/>-->
                <field name="attachment_ids"/>
                <!--                <field name="state" widget="label_selection" optional="show"-->
                <!--                       modifiers="{'readonly':true,'required':true}"/>-->
                <!--                <button name="action_confirm" icon="fa-thumbs-up" states="draft" string="确认" type="object"-->
                <!--                        modifiers="{'invisible':[('state','not in',['draft'])]}"/>-->
                <!--                <button name="action_draft" icon="fa-undo" states="confirm" string="撤回" type="object"-->
                <!--                        modifiers="{'invisible':[('state','not in',['draft'])]}"/>-->
                <field name="deduction_statement"/>
                <field name="other_subsidies_state" widget="label_selection"/>
            </tree>
        </field>
    </record>

    <record id="other_subsidies_view" model="ir.actions.act_window">
        <field name="name">其他补助</field>
        <field name="res_model">tx.hr.other.subsidies</field>
        <field name="view_mode">tree,form,search</field>
    </record>
</odoo>
