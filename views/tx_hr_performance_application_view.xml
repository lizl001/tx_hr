<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_performance_search" model="ir.ui.view">
        <field name="name">tx_hr_performance_coefficient.search</field>
        <field name="model">tx.hr.performance.coefficient</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="date"/>
                <field name="department_id"/>
                <field name="job_id"/>
                <field name="name"/>
                <searchpanel>
                    <field name="year"/>
                    <field name="month"/>
<!--                    <field name="performance_state"/>-->
                </searchpanel>
            </search>

        </field>
    </record>
    <record id="view_performance_form" model="ir.ui.view">
        <field name="name">tx_hr_performance_coefficient.form</field>
        <field name="model">tx.hr.performance.coefficient</field>
        <field name="arch" type="xml">
            <form string="绩效申请">
                <header>
                    <button invisible="1"/>
                    <field name="state" invisible="1"/>
                    <field name="performance_state" widget="statusbar"
                           statusbar_visible="draft,pending,approved,rejected"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" options="{'no_open': True}"/>
                        </group>
                        <group>
                        </group>
                        <group>
                            <field name="year" options="{'no_open': True}"/>
                            <field name="department_id" options="{'no_open': True}" attrs="{'readonly': True}"/>
                            <field name="attachment_ids" widget="many2many_binary"/>
                        </group>
                        <group>
                            <field name="month"/>
                            <field name="job_id" options="{'no_open': True}" attrs="{'readonly': True}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="绩效明细">
                            <header>
                                <button name="button_creat_coefficient_detail" type="object" string="批量添加员工"/>
                            </header>
                            <field name="performance_coefficient_detail">
                                <tree editable="top">
                                    <field name="employee_id"/>
                                    <field name="department_id" options="{'no_open': True}"/>
                                    <field name="job_id" options="{'no_open': True}"/>
                                    <field name="amount_subsidy"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_performance_tree" model="ir.ui.view">
        <field name="name">tx_hr_performance_coefficient.tree</field>
        <field name="model">tx.hr.performance.coefficient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="date"/>
                <!--                <field name="pin"/>-->
                <field name="name"/>
                <field name="department_id"/>
                <field name="job_id"/>
                <!--                <field name="performance_coefficient"/>-->
                <field name="attachment_ids"/>
                           <field name="performance_state" widget="label_selection"/>
            </tree>
        </field>
    </record>

    <record id="performance_application_view" model="ir.actions.act_window">
        <field name="name">绩效申请</field>
        <field name="res_model">tx.hr.performance.coefficient</field>
        <field name="view_mode">tree,form,search</field>
    </record>
</odoo>
