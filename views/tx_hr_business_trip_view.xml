<odoo>
    <data>
        <!-- 出差申请单Tree -->
        <record id="view_business_trip_tree" model="ir.ui.view">
            <field name="name">Business Trip Tree</field>
            <field name="model">tx.hr.business.trip</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="pin"/>
                    <field name="department_id"/>
                    <field name="employee_id"/>
                    <field name="department_id"/>
                    <field name="employee_job_id"/>
                    <field name="explain"/>
                    <field name="attachment_ids"/>
                    <field name="business_state" widget="label_selection"/>
                </tree>
            </field>
        </record>

        <!-- 出差申请单Form -->
        <record id="view_business_trip_form" model="ir.ui.view">
            <field name="name">Business Trip Form</field>
            <field name="model">tx.hr.business.trip</field>
            <field name="arch" type="xml">
                <form string="出差申请单">
                    <header>
                        <button invisible="1"/>
                        <field name="state" invisible="1"/>
                        <field name="business_state" widget="statusbar"
                               statusbar_visible="draft,pending,approved,rejected"/>
                    </header>
                    <sheet>
                        <!--申请人信息-->
                        <group>
                            <group>
                                <field name="employee_id"/>
                                <field name="department_id"/>
                                <field name="employee_job_id"/>
                            </group>
                            <group>
                                <field name="begin_time"
                                       widget="daterange"
                                       options="{'related_end_date': 'over_time', 'picker_options': {'timePickerIncrement': 30}}"
                                       id="begin_time"/>
                                <field name="over_time"
                                       widget="daterange"
                                       options="{'related_start_date': 'begin_time', 'picker_options': {'timePickerIncrement': 30}}"
                                       id="over_time"/>
                            </group>
                        </group>
                        <group>
                            <field name="attachment_ids" widget="many2many_binary"/>
                            <field name="explain"/>
                        </group>
                        <notebook>
                            <page string="出差人员">
                                <field name="business_person_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="department_id"/>
                                        <field name="job_id"/>
                                        <field name="company_id" invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>


        <!-- 出差申请单Search -->
        <record id="view_business_trip_search" model="ir.ui.view">
            <field name="name">Business Trip Search</field>
            <field name="model">tx.hr.business.trip</field>
            <field name="arch" type="xml">
                <search>
                    <field name="pin"/>
                    <searchpanel>
                        <field name="department_id" enable_counters="1"/>
                    </searchpanel>
                </search>
            </field>
        </record>


        <record id="employee_business_trip" model="ir.actions.act_window">
            <field name="name">出差申请</field>
            <field name="res_model">tx.hr.business.trip</field>
            <field name="view_mode">tree,form,search</field>
        </record>
    </data>
</odoo>