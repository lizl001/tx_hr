<odoo>
    <record id="tx_hr_attendance_tree_view" model="ir.ui.view">
        <field name="name">考勤Tree</field>
        <field name="model">tx.hr.attendance</field>
        <field name="arch" type="xml">
            <tree create="0">
                <field name="pin"/>
                <field name="name"/>
                <field name="clock_in_time"/>
                <field name="weekday"/>
            </tree>
        </field>
    </record>

    <record id="tx_hr_attendance_form_view" model="ir.ui.view">
        <field name="name">考勤Form</field>
        <field name="model">tx.hr.attendance</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="pin"/>
                        <field name="clock_in_time"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="tx_hr_attendance_search_view" model="ir.ui.view">
        <field name="name">考勤Search</field>
        <field name="model">tx.hr.attendance</field>
        <field name="arch" type="xml">
            <search>

                <field name="pin"/>
                <field name="clock_in_time" string="打卡时间大于" filter_domain="[('clock_in_time','>',self)]"/>
                <filter string="今天打卡" name="today"
                        domain="[('adjusted_clock_in_time', '&gt;=', datetime.datetime.now().strftime('%Y-%m-%d 00:00:00')),
                        ('adjusted_clock_in_time', '&lt;=', datetime.datetime.now().strftime('%Y-%m-%d 23:59:59'))]"/>
            </search>
<!--            <searchpanel>-->
<!--                <field name="name"/>-->
<!--                <field name="weekday"/>-->
<!--            </searchpanel>-->
        </field>
    </record>

    <record id="tx_hr_attendance_act_window" model="ir.actions.act_window">
        <field name="name">考勤</field>
        <field name="res_model">tx.hr.attendance</field>
        <field name="context">{"search_default_today":1}</field>
        <field name="view_mode">tree,form,search</field>
    </record>
</odoo>