<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="ref_hr_contract_view_form" model="ir.ui.view">
        <field name="name">ref_hr_contract_view_form</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form//sheet//group//group//field[@name='structure_type_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//form//sheet//group//group//field[@name='hr_responsible_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <group name="salary" position="inside">
                <label for="post_wage"/>
                <div class="o_row" name="post_wage">
                    <field name="post_wage" nolabel="1"/>
                    <span>/ 月</span>
                </div>
                <label for="performance_pay"/>
                <div class="o_row" name="performance_pay">
                    <field name="performance_pay" nolabel="1"/>
                    <span>/ 月</span>
                </div>
                <label for="seniority_wage"/>
                <div class="o_row" name="seniority_wage">
                    <field name="seniority_wage" nolabel="1"/>
                    <span>/ 月</span>
                </div>
            </group>
            <group name="salary" position="after">
                <group name="subsidy">
                    <label for="housing_subsidy"/>
                    <div class="o_row" name="housing_subsidy">
                        <field name="housing_subsidy" nolabel="1"/>
                        <span>/ 月</span>
                    </div>
                </group>
            </group>
            <group name="salary" position="after">
                <group name="subsidy">
                    <label for="senior_allowance"/>
                    <div class="o_row" name="senior_allowance">
                        <field name="senior_allowance" nolabel="1"/>
                        <span>/ 月</span>
                    </div>
                </group>
            </group>
            <group name="salary" position="after">
                <group name="subsidy">
                    <label for="job_subsidy"/>
                    <div class="o_row" name="job_subsidy">
                        <field name="job_subsidy" nolabel="1"/>
                        <span>/ 月</span>
                    </div>
                </group>
            </group>
            <group name="salary" position="after">
                <group name="subsidy">
                    <label for="social_security"/>
                    <div class="o_row" name="social_security">
                        <field name="social_security" nolabel="1"/>
                    </div>
                </group>
            </group>
        </field>
    </record>
</odoo>
