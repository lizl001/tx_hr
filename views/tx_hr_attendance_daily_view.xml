<odoo>
    <record id="tx_hr_attendance_daily_tree_view" model="ir.ui.view">
        <field name="name">考勤统计Tree</field>
        <field name="model">tx.hr.attendance.daily</field>
        <field name="arch" type="xml">
            <tree create="0">
                <field name="pin"/>
                <field name="employee_id"/>
                <field name="department_id"/>
                <field name="employee_job_id"/>
                <field name="attendance_time"/>
                <field name="normal_overtime_hours"/>
                <field name="holiday_overtime_hours"/>
                <field name="date"/>
                <field name="punch_in_morning"/>
                <field name="clock_out_morning"/>
                <field name="punch_in_afternoon"/>
                <field name="clock_out_afternoon"/>
                <field name="punch_in_evening"/>
                <field name="clock_out_evening"/>
                <field name="late_leave_early"/>
            </tree>
        </field>
    </record>

