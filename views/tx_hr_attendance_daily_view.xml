    <record id="tx_hr_attendance_daily_search_view" model="ir.ui.view">
        <field name="name">考勤Search</field>
        <field name="model">tx.hr.attendance.daily</field>
        <field name="arch" type="xml">
            <search>
                <field name="pin"/>
                <field name="year"/>
                <field name="month"/>
                <field name="department_id"/>
                <filter string="今日记录" name="today"
                        domain="[('date', '=', datetime.datetime.now().strftime('%Y-%m-%d'))]"/>
                <filter string="本月记录" name="month"
                        domain="[('month', '=', datetime.datetime.now().month), ('year', '=', datetime.datetime.now().year)]"/>
                <filter string="异常打卡记录" name="exception"
                        domain="[('late_leave_early', '>', 0)]"/>
                <searchpanel>
                    <field name="employee_id"/>
                    <field name="department_id"/>
                </searchpanel>
            </search>
        </field>
    </record>


    <record id="tx_hr_attendance_daily_act_window" model="ir.actions.act_window">
        <field name="name">考勤日报</field>
        <field name="res_model">tx.hr.attendance.daily</field>
        <field name="context">{"search_default_today":1}</field>
        <field name="view_mode">tree,form</field>
    </record>
